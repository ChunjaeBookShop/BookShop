	       		<if test=" memberBirth!='' and memberBirth!=null">
					member_birth=#{memberBirth}
				</if>
	       		<if test=" memberHp!='' and memberHp!=null">
					member_hp=#{memberHp}
				</if>
			      <if test=" smsstsYn!='' and smsstsYn!=null">
					smssts_yn=#{smsstsYn},
			      </if>
			      <if test=" memberEmail!='' and memberEmail!=null">
